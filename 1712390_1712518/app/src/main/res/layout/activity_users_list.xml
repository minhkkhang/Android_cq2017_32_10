<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UsersListActivity"
    android:orientation="vertical"
    android:background="#0f2557">
    <LinearLayout
        android:baselineAligned="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/users_searchLayout"
        android:orientation="horizontal"
        android:weightSum="10"
        android:background="#0f2557"
        android:visibility="visible"
        android:focusable="false"
        android:clickable="false"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:orientation="horizontal"
            android:background="#fcc133"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:weightSum="1"
            >
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/search"
                android:id="@+id/users_searchTxt"
                android:layout_weight="1"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/users_searchBtn"
                android:text="@string/search"/>
        </LinearLayout>
    </LinearLayout>
    <ListView
        android:id="@+id/users_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:footerDividersEnabled="true"
        android:headerDividersEnabled="true"
        android:dividerHeight="1dp"
        android:divider="#0f2557"
        android:background="#0f2557"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:layout_below="@id/users_searchLayout"/>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/users_progressBar"
        android:layout_centerInParent="true"
        style="?android:attr/progressBarStyleLarge"/>

</RelativeLayout>